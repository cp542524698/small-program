/* pages/shopping/shopping.wxss */
.index_01 {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 700rpx;
  height: 400px;
  /*border:solid red 1px;*/
}

.line{
  width: 100%;
  height: 8rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color:#EBEBEB;
}

.detail {
  display: flex;
  flex-direction: column;  
  align-items: center;
  width: 700rpx;
  height: 1140px;
  margin-bottom:140rpx;
}

.showall{
  display: flex;
  flex-direction: column;
  position: fixed;
  margin-left: 640rpx;
  align-content: flex-end;
  justify-content: flex-end;
  width: 100rpx;
  height: 200rpx;
  bottom:50%;
}

.order{
  width: 100rpx;
  height: 100rpx;  
}
.win{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom:0%;
  height: 140rpx;
  width: 100%;
  align-items:center;
  text-align:center;
  background-color:	#FCFCFC;
}

.buy{
  display: flex;
  justify-content: center;  /*左右具中*/
  align-items: center;      /*上下具中*/
  width: 40%;
  height: 60rpx;
  background-color: red;
}

.add {
  display: flex;
  justify-content: center;  /*左右具中*/
  align-items: center;      /*上下具中*/
  width: 40%;
  height: 60rpx;
}

.addcar_hide{
  display: none;
}
.addcar_show{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 100%;
  height: 360rpx;
  position: fixed;
  bottom: 0%;
  background-color: #FCFCFC;
}



.addto {
  display: flex;
  justify-content: center;  /*左右具中*/
  align-items: center;      /*上下具中*/
  width: 94%;
  height: 60rpx;
  background-color:#FF4500;
  margin-top: 20rpx;
  font-weight: bold;
}


.desc {
  display: flex;
  flex-direction: column;
  width:100%;
  height: 120rpx;
  align-items: center;
  flex-wrap: wrap;
  align-content: space-between;
}

.exit{
  margin-right: 20rpx;
  margin-top: 20rpx;
  font-size: 35rpx;
  color:black;
}

.name{
  display: flex;
  flex-direction: column;
  margin-right: 300rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  flex-wrap: wrap;
}

.price {
  margin-right: 420rpx;
  font-size: 30rpx;
}

.countshow {
  display: flex;
  flex-direction:column;
  margin-top: 40rpx;
  margin-left:20rpx;
  font-size: 30rpx;
  font-weight:bold;
}

.userinfo-avatar {
  /*border: red 1px solid;*/
  
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}

/*stepper容器*/
.stepper {
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
    margin-right: 20rpx;
    border-radius: 5rpx;
    border: black 1rpx solid;
    width: 160rpx;
    height: 55rpx;
}


/*加号与减号*/
.stepper text {
    width: 25rpx;
    height: 34rpx;
    margin-top: 18rpx;
    margin-left: 20rpx;
    line-height: 26rpx;
    text-align: center;
}


/*数值*/
.stepper input {
    border-left: 1rpx solid black;
    border-right: 1px solid black;
    margin-left: 10rpx;
    width: 50rpx;
    height: 55rpx;
    text-align: center;
}

/*普通样式*/
.stepper .normal{
    color: black;
}

/*禁用样式*/
.stepper .disabled{
    color: #ccc;
}

.hide{
  display: none;
}

.show{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: flex-start;
  width: 100%;
  height: 300rpx;
  position: fixed;
  bottom: 0%;
  background-color: #D8D8D8;
}

.manage{
    display: flex;
    flex-direction: row;
    padding-left: 15rpx;
    margin-top: 10rpx;
    width: 100%;
    height: 25%;
}

.butt{
    display: flex;
    flex-direction: column;
    align-content:center;
    margin-top: 20rpx;
    justify-content:center;
    align-items: center;
    margin-left: 80rpx;
    width: 96%;
    height: 60rpx;
}


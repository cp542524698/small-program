/*普通样式*/
.stepper .normal{
    color: black;
}

/*禁用样式*/
.stepper .disabled{
    color: #ccc;
}

/*复选框样式*/
.carts-list icon {
    margin-top: 60rpx;
    margin-right: 20rpx;
}

/*底部按钮*/
.carts-footer {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background: white;
    position: fixed;
    bottom: 0;
    border-top: 1px solid #eee;
}

/*复选框*/
.carts-footer icon {
    margin-left: 20rpx;
}

/*全选字样*/
.carts-footer text {
    font-size: 30rpx;
    margin-left: 8rpx;
    line-height: 10rpx;
}

/*立即结算按钮*/
.carts-footer .button {
    line-height: 80rpx;
    text-align: center;
    width:220rpx;
    height: 80rpx;
    background-color: #f60;
    color: white;
    font-size: 36rpx;
    border-radius: 0;
    border: 0;
}



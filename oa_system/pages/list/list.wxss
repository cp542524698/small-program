.vFull-page {
  background-color: #fafafa;
}

.vLine {
  height: 2rpx;
  background-color: #e5e5e5;
  margin-left: 40rpx;
}

.vLabel {
  height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #fafafa;
}

.vLabel text {
  color: #aaa;
  font-size: 35rpx;
  margin-left: 40rpx;
}

.vCompanylist {
  background-color: #fff;
}

.companyName {
  height: 200rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  /*margin-left: 40rpx;*/
  border-bottom: 1rpx solid rgba(200, 200, 200, 0.5);
}

.companyName text {
  color: blcak;
  font-size: 35rpx;
}

.companyDetail{
  display: flex;
  flex-direction: column;
  width:100%;
  margin-top:20rpx;
  align-items: center;
  /*border:solid 1rpx red;*/
}

.companyname {
    font-size:40rpx;
}

.companyAddress{
    font-size:24rpx;
    color:darkgray; 
}

.action{
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 20rpx;
}


.detail{
  display: flex;
  justify-content: center;  /*左右具中*/
  align-items: center;      /*上下具中*/
  width: 40%;
  height: 60rpx;
  background-color: palegreen;
}

.join {
  display: flex;
  justify-content: center;  /*左右具中*/
  align-items: center;      /*上下具中*/
  width: 40%;
  height: 60rpx;
  background-color: palegreen;
}


.hide{
  display: none;
}

.show{
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: flex-start;
  width: 100%;
  height: 160rpx;
  position: fixed;
  bottom: 0%;
  background-color: #D8D8D8;
}

.manage{
    display: flex;
    flex-direction: row;
    padding-left: 15rpx;
    margin-top: 10rpx;
    width: 100%;
    height: 25%;
}

.butt{
    display: flex;
    flex-direction: column;
    align-content:center;
    margin-top: 20rpx;
    justify-content:center;
    align-items: center;
    /*margin-left: 80rpx;*/
    width: 88%;
    height: 60rpx;
}

.p1{
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 1;
-webkit-box-orient: vertical;
}



<view class="vWall">
  <view class="vLocation">
    <!--
    <text>{{company.Name}}</text>
    <image src="/images/icons/location.png"></image>
    <view class="tLocation"><text>{{company.Location}}</text></view>
    -->
    <map id="map4select" longitude="{{company.Longitude}}" latitude="{{company.Latitude}}" markers="{{markers}}" scale="20" style="width:{{map_width}}px;height:{{map_height}}px" bindregionchange="regionchange" controls="{{controls}}">
    </map>
  </view>
  <text>{{company.Name}}</text>
  <view class="tLocation">
    <text>{{company.Location}}</text>
  </view>
  <button class="checkBtn" bindtap="checkBtn_click" disabled="{{!checkButton}}">
    {{checkButton == true ? '申请加入' : '不能重复申请'}}
  </button>
</view>
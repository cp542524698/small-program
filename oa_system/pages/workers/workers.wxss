.companyshow
{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50rpx;
  align-content:stretch;
  margin-left: 30rpx;
}

.GoIcon{
    height: 40rpx;
    width: 40rpx;
    margin-top: 5rpx;
    margin-left: 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 160rpx;
  align-content: center;
}

.line{
  display: flex; 
  justify-content: flex-start; 
  flex-direction: row;
  align-items: fstretch;
  align-content: stretch;
  flex-wrap: wrap;
  width: 18rem;
  margin-left: 30rpx;
  border: black solid 2rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 15rpx;
  margin-left: 50rpx;
  border-radius: 50%;
}

.nickname {
  height: 50rpx;
  width: 360rpx;
  margin-top: 55rpx;
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 20rpx;
  color: red;
  /*border: red solid 1rpx;*/
}

.button {
    width: 200rpx;
    height: 70rpx;
    margin-right: 60rpx;
    margin-top: 60rpx;
	/*border: solid 2px #22a1e0;*/
    border-radius: 10px;
    text-align: center;
    line-height: 70rpx;
    font-size: 12px;
    color: #22a1e0;
}

.button2 {
    width: 200rpx;
    height: 70rpx;
    margin-left: 0rpx;
    margin-top: 40rpx;
	/*border: solid 2px #22a1e0;*/
    border-radius: 10px;
    text-align: center;
    line-height: 70rpx;
    font-size: 12px;
    /*color: #22a1e0;*/
}

.vLine {
  height: 2rpx;
  background-color: #e5e5e5;
}

.vDate {
  margin-left: 40rpx;
}

.vDate text {
  height: 48rpx;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.54);
}

.vWorkRecord {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.12);
  margin-left: 40rpx;
  height: 132rpx;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 10rpx;
  border: 1rpx red solid;
}

.pWorkers-item {
  height: 86rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.12);
}

.vWorkRecord image {
  width: 72rpx;
  height: 72rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}

.avatar{
    margin-top: 70rpx;
    margin-left: 30rpx;
}
.tName {
  height: 48rpx;
  font-size: 34rpx;
  margin-left: 60rpx;
  margin-top: 10rpx;
  border: 1rpx red solid;
}



.tWorkTime {
  font-size: 17px;

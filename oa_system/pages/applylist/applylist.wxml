<!--pages/applylist/applylist.wxml-->

<block wx:if="{{list.length == 0}}">
    <view>暂无申请人员</view>
</block>

<block wx:else >
    <view class="applylist">
        <view class="list-item">
            <block wx:for="{{list}}" >
                <view class="user">
                    <view class="avatar">
                        <image src="{{item.img}}"></image>
                    </view>
                    <view class="name">
                        <text>{{item.wxName}}</text>
                    </view>
                </view>
                
                <view class="button">
                    <view data-id="{{item._id}}" class="refuse" bindtap="handleRefuse">拒绝</view>
                    <view data-id="{{item._id}}" class="accept" bindtap="handleAccept">接受</view>
                </view>     
            </block>
        </view>
    </view>
</block>


